<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gt_coc_studentevents"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gt_coc_studentevents.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gt_coc_studentevents.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.gt_coc_studentevents.EventListing"
            android:label="@string/event_listing" >
        </activity>
        <activity
            android:name="com.example.gt_coc_studentevents.DatabaseConnector"
            android:label="@string/database_connector" >
        </activity>
        <activity
            android:name="com.example.gt_coc_studentevents.EventListActivity"
            android:label="@string/title_activity_event_list" >
        </activity>
        <activity
            android:name="com.example.gt_coc_studentevents.ListDetailsActivity"
            android:label="@string/title_activity_list_details" >
        </activity>
        <activity
            android:name=".PreferenceWithHeaders"
            android:label="PreferenceWithHeaders" >
        </activity>
    </application>

</manifest>
